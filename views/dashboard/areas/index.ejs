                <th>Zone</th>
                <th>State</th>
                <th>Customers</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <!-- Data will be dynamically injected here -->
            </tbody>
          </table>
        
        </div>
        <!-- /nested object data -->

      </div>
      <!-- /content area -->
    </div>
    <!-- /inner content -->
  </div>
  <!-- /main content -->
</div>
<!-- /page content -->


