<div class="modal-dialog modal-full">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add New Customer</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <form action="/submit-form" method="POST">

                <!-- Customer Information -->
                <div class="form-section mb-4">
                    <h2>Customer Information</h2>
            
                    <div class="row">
                        <!-- Customer Name -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerName" class="form-label">Customer Name</label>
                                <input type="text" class="form-control" id="customerName" name="customerName" value="<%= data.allData.customerName %>">
                            </div>
                        </div>
            
                        <!-- Firms Selection -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Firms</label>
                                <select class="form-select chosen-select" name="firms[]" multiple="multiple" style="width: 100%;">
                                    <% data.allCategories.forEach(category => { %>
                                        <option value="<%= category.categoriesId %>"><%= category.categoriesType %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
            
                    <div class="row">
                        <!-- Status Selection -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option value="VERIFIED" >VERIFIED</option>
                                    <option value="UNVERIFIED" >UNVERIFIED</option>
                                </select>
                            </div>
                        </div>
            
                        <!-- Customer Status Selection -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Customer Status</label>
                                <select class="form-select" name="customerStatus">
                                    <option value="ACTIVE" >ACTIVE</option>
                                    <option value="INACTIVE" >INACTIVE</option>
                                    <option value="CLOSED" >CLOSED</option>
                                </select>
                            </div>
                        </div>
                    </div>
            
                    <div class="row">
                        <!-- Area Selection -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Area</label>
                                <select class="form-select chosen-select" name="areas[]" multiple="multiple" style="width: 100%;">
                                    <% data.allAreas.forEach(area => { %>
                                        <option value="<%= area.areaId %>"><%= area.district %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
            
                        <!-- Grade Selection -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Grade</label>
                                <select class="form-select chosen-select" name="grades[]" multiple="multiple" style="width: 100%;">
                                    <% data.allGrades.forEach(grade => { %>
                                        <option value="<%= grade.gradeId %>"><%= grade.gradeType %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Address Information -->
                <div class="form-section mb-4">
                    <h2>Address Information</h2>
            
                    <div class="row">
                        <!-- Pincode -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="pincode" class="form-label">Pincode</label>
                                <input type="text" class="form-control" id="pincode" name="pincode" value="<%= data.allData.pincode %>">
                            </div>
                        </div>
            
                        <!-- Address -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address" value="<%= data.allData.address %>">
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Firm Information -->
                <div class="form-section mb-4">
                    <h2>Firm Information</h2>
            
                    <div class="row">
                        <!-- Firm Selection -->
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Firm</label>
                                <select class="form-select chosen-select" name="firms[]" multiple="multiple" style="width: 100%;">
                                    <% data.allFirms.forEach(firm => { %>
                                        <option value="<%= firm.firmId %>"><%= firm.firmName %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Contact Information -->
                <div class="form-section mb-4">
                    <h2>Contact Information</h2>
            
                    <div class="row">
                        <!-- Contact Name -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="contactName" class="form-label">Contact Name</label>
                                <input type="text" class="form-control" id="contactName" name="contactName" value="<%= data.allData.contacts%>">
                            </div>
                        </div>
            
                        <!-- Designation -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="designation" class="form-label">Designation</label>
                                <input type="text" class="form-control" id="designation" name="designation" value="<%= data.allData.contacts%>">
                            </div>
                        </div>
            
                        <!-- Mobile Number -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="mobileNo" class="form-label">Mobile No</label>
                                <input type="tel" class="form-control" id="mobileNo" name="mobileNo" value="<%= data.allData.contacts %>">
                            </div>
                        </div>
            
                        <!-- Email -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= data.allData.contacts%>">
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Product Information -->
                <div class="form-section mb-4">
                    <h2>Product Information</h2>
            
                    <div class="row">
                        <!-- Products Selection -->
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Products</label>
                                <select class="form-select chosen-select" name="products[]" multiple="multiple" style="width: 100%;">
                                    <% data.allProducts.forEach(product => { %>
                                        <option value="<%= product.productId %>" ><%= product.productName %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Reference Information -->
                <div class="form-section mb-4">
                    <h2>Reference Information</h2>
            
                    <div class="row">
                        <!-- Reference 1 Name -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ref1Name" class="form-label">Reference 1 Name</label>
                                <input type="text" class="form-control" id="ref1Name" name="ref1Name" value="<%= data.allData.referenceName1 %>">
                            </div>
                        </div>
            
                        <!-- Reference 1 Contact -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ref1Contact" class="form-label">Reference 1 Contact Number</label>
                                <input type="tel" class="form-control" id="ref1Contact" name="ref1Contact" value="<%= data.allData.reference1ContactNumber %>">
                            </div>
                        </div>
                    </div>
            
                    <div class="row">
                        <!-- Reference 2 Name -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ref2Name" class="form-label">Reference 2 Name</label>
                                <input type="text" class="form-control" id="ref2Name" name="ref2Name" value="<%= data.allData.referenceName2 %>">
                            </div>
                        </div>
            
                        <!-- Reference 2 Contact -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ref2Contact" class="form-label">Reference 2 Contact Number</label>
                                <input type="tel" class="form-control" id="ref2Contact" name="ref2Contact" value="<%= data.allData.reference2ContactNumber %>">
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Credit Information -->
                <div class="form-section mb-4">
                    <h2>Credit Information</h2>
            
                    <div class="row">
                        <!-- Credit Limit -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="creditLimit" class="form-label">Credit Limit</label>
                                <input type="number" class="form-control" id="creditLimit" name="creditLimit" value="<%= data.allData.creditLimit %>">
                            </div>
                        </div>
            
                        <!-- Credit Days -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="creditDays" class="form-label">Credit Days</label>
                                <input type="number" class="form-control" id="creditDays" name="creditDays" value="<%= data.allData.creditDays %>">
                            </div>
                        </div>
                    </div>
                </div>
            
            </form>
            
            
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        
    </div>
    </div>
</div>

