<div class="modal-dialog modal-full"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add New Area</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <form action="/apiDashboard/firm-create" method="POST">
                <!-- Firm Information -->
                <div class="form-section mb-4">
                    <h4 class="mb-3">Firm Information</h4>
                    
                    <div class="row">
                        <!-- Firm Name -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-name" class="form-label">Firm Name*</label>
                                <input type="text" class="form-control" id="firm-name" name="firmName" value="" required>
                                <small class="form-text text-muted">Enter the official name of the firm.</small>
                            </div>
                        </div>
            
                        <!-- GST Number -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-gst" class="form-label">GST Number*</label>
                                <input type="text" class="form-control" id="firm-gst" name="GSTNumber" value="" required>
                                <small class="form-text text-muted">Enter the GST number of the firm.</small>
                            </div>
                        </div>
            
                        <!-- Product Produced -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-product" class="form-label">Product Produced*</label>
                                <input type="text" class="form-control" id="firm-product" name="ProductProduced" value="" required>
                                <small class="form-text text-muted">Specify the product or service produced by the firm.</small>
                            </div>
                        </div>
                    </div>
            
                    <div class="row">
                        <!-- Address -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="firm-address" class="form-label">Address*</label>
                                <input type="text" class="form-control" id="firm-address" name="address" value="" required>
                                <small class="form-text text-muted">Enter the firm's full address.</small>
                            </div>
                        </div>
            
                        <!-- Pincode -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="firm-pincode" class="form-label">Pincode*</label>
                                <input type="text" class="form-control" id="firm-pincode" name="pincode" value="" required>
                                <small class="form-text text-muted">Enter the pincode for the address.</small>
                            </div>
                        </div>
                    </div>
            
                    <div class="row">
                        <!-- Account Number -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-account" class="form-label">Account Number*</label>
                                <input type="text" class="form-control" id="firm-account" name="accountNumber" value="" required>
                                <small class="form-text text-muted">Provide the bank account number of the firm.</small>
                            </div>
                        </div>
            
                        <!-- Bank Name -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-bank" class="form-label">Bank Name*</label>
                                <input type="text" class="form-control" id="firm-bank" name="bankName" value="" required>
                                <small class="form-text text-muted">Enter the name of the bank where the account is held.</small>
                            </div>
                        </div>
            
                        <!-- IFSC Code -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firm-ifsc" class="form-label">IFSC Code*</label>
                                <input type="text" class="form-control" id="firm-ifsc" name="IFSCcode" value="" required>
                                <small class="form-text text-muted">Provide the IFSC code for electronic fund transfers.</small>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
            
    </div>
    </div>
</div>

